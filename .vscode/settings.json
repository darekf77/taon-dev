{
  "workbench.colorCustomizations": {
    "activityBar.background": "#499694",
    "activityBar.foreground": "#000000",
    "statusBar.background": "#499694",
    "statusBar.debuggingBackground": "#15d8ff"
  },

  "workbench.colorTheme": "Default Light+",

  "files.exclude": {
    "_changelog": false,
    ".sass-cache": false,
    ".sourcemaps": false,
    ".DS_Store": false,
    "npm-debug.log": false,
    "yarn-error.log": false,
    "testem.log": false,
    "connect.lock": false,
    "node_modules": false,
    "libpeerconnection.log": false,
    "dist": false,
    "coverage": false,
    "Thumbs.db": false,
    "browser": false,
    "websql": false,
    "dist-nocutsrc": false,
    "package-lock.json": false,
    "chrome-profiler-events*.json": false,
    "speed-measure-plugin*.json": false,
    "tmp*": false,
    "npm-debug.log*": false,
    "*.filetemplate": false,
    ".gitignore": false,
    "package.json": false,
    ".npmignore": false,
    ".babelrc": false,
    ".editorconfig": false,
    "eslint.config.js": false,
    "protractor.conf.js": false,
    "karma.conf.js": false,
    ".prettierc": false,
    "angular.json": false,
    ".prettierrc.json": false,
    ".eslintrc.json": false,
    ".npmrc": false,
    ".prettierignore": false,
    ".prettierrc": false,
    "run.js": false,
    "index.d.ts": false,
    "index.js": false,
    "index.js.map": false,
    "update-vscode-package-json.js": false,
    "tsconfig*": false,
    "webpack.*": false,
    "tslint.*": false,
    "*.schema.json": false
  },

  "search.exclude": {
    "bin": true,
    "local_release": true,
    "node_modules": true,
    ".build": true,
    ".vscode": true,
    "browser": true,
    "dist": true,
    "package-lock.json": true,
    "tmp-*": true,
    ".firedev": true,
    ".taon": true,
    ".tnp": true,
    "**/bin": true,
    "**/local_release": true,
    "**/node_modules": true,
    "**/.build": true,
    "**/.vscode": true,
    "**/browser": true,
    "**/dist": true,
    "**/package-lock.json": true,
    "**/tmp-*": true,
    "**/.firedev": true,
    "**/.taon": true,
    "**/.tnp": true,
    "projects": true,
    "dist-*": true,
    "src/lib/env/**/*.*": true,
    "**/dist-*": true,
    "**/src/lib/env/**/*.*": true,
    "*.rest": true,
    "**/*.rest": true
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },

  "[json5]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },

  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },

  "editor.rulers": [
    80,
    120
  ],

  "eslint.migration.2_x": "off",
  "eslint.enable": true,
  "prettier.enable": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.inlineSuggest.enabled": true,
  "tslint.autoFixOnSave": false,
  "tslint.enable": false,
  "tslint.alwaysShowRuleFailuresAsWarnings": false,
  "prettier.endOfLine": "auto",
  "git.ignoreLimitWarning": true,
  "search.useIgnoreFiles": false,

  "search.include": [
    "**/src/**"
  ],

  "window.title": "projects/npm/taon-dev  [ ${activeEditorShort} ]",

  "json.schemas": [
    {
      "fileMatch": [
        "/docs-config.jsonc"
      ],
      "url": "./docs-config.schema.json"
    },
    {
      "fileMatch": [
        "/taon.jsonc"
      ],
      "url": "./taon-config-container.schema.json"
    }
  ],

  "files.watcherExclude": {
    "local_release/**": true
  },

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },

  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },

  "prettier.prettierPath": "./node_modules/prettier"
}
